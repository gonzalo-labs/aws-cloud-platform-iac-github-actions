{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BudgetsManage",
      "Effect": "Allow",
      "Action": [
        "budgets:ModifyBudget",
        "budgets:ViewBudget",
        "budgets:ListTagsForResource",
        "budgets:TagResource",
        "budgets:UntagResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowCreateBudgetsSLROnly",
      "Effect": "Allow",
      "Action": "iam:CreateServiceLinkedRole",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "iam:AWSServiceName": "budgets.amazonaws.com"
        }
      }
    }
  ]
}